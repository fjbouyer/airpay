<% content_for :title, "Airpay - Payez sans attendre" %>
<div class="homepage-hero-module">
  <div class="video-container">
    <div class="title-container text-center">
      <div class="headline">
        <div class="title">
          <h1 >AirPay</h1>
          <h3 id="title-airpay">Gagnez du temps. Payez avant la caisse</h3>
        </div>
      </div>
      <div class="text-center" id="loadBannerVideoSpinner" style="background-color: rgba(0, 0, 0, 0.5); padding: 10px; border-radius: 4px; display: none; margin-top: 20px;">
        <h5 class="text-thin text-primary">Loading AirPay... <i class="fa fa-circle-o-notch fa-spin"></i></h5>
      </div>
    </div>
    <div class="filter"></div>
    <video autoplay loop class="fillWidth">
      <source src="<%= asset_path('Matkot.mp4') %>" type="video/mp4" />Your browser does not support the video tag. I suggest you upgrade your browser.
        <source src="<%= asset_path('Matkot.webm') %>"  type="video/webm" />Your browser does not support the video tag. I suggest you upgrade your browser.
        </video>
        <div class="poster hidden">
          <%= image_tag "Matkot.jpg" %>
        </div>
      </div>
    </div>

    <!-- Second part: results -->
    <div class="searchbar-results-center">
      <div id="searchbar-results">
        <div class="searchbar-flex">
          <form action="/reservations/find" class="searchbar-background" data-remote="true">
            <input type="text" name="reservation[creator_last_name]" id="searchbar-reservation-name"class="form-control input-lg" placeholder="Nom de la réservation">
            <select name="reservation[sport_category]" id="searchbar-sport-category" class="form-control input-lg">
              <%= SportCategory.all.each do |sport_category| %>
              <option value="<%= sport_category.id %>"><%= sport_category.name %></option>
              <% end %>
              <input type="date" name="reservation[date]" class="form-control input-lg" id="input-date">
              <input type="submit" class="btn btn-danger btn-lg" id="searchbar-submit" value="Chercher">
            </form>
          </div>
          <div id="reservation-result">
          </div>
        </div>
      </div>

      <!-- Third part: steps -->

      <div class="banner-home" id="banner-orange">
        <div class="banner-home-content right-float text-right" >
          <h3>Simple comme AirPay</h3>
          <p>Arrêtez de courir: payez quand vous voulez! </p>
        </div>
        <div class="photo-banner">
          <div class="photo-banner-sticky" id="running">
            <%= image_tag 'run.png', id: "photo-running" %>
          </div>
        </div>
      </div>
      <div class="banner-home" id="banner-green">
        <div class="banner-home-content left-float text-left" >
          <h3>1. Trouvez votre réservation</h3>
          <p>...en renseignant le nom de la personne qui a réservé, le sport et la date</p>
        </div>
        <div class="photo-banner">
         <div class="photo-banner-sticky" id="tennis">
          <%= image_tag 'tennis.png', id: "photo-tennis" %>
        </div>
      </div>
    </div>
    <div class="banner-home" id="banner-purple">
      <div class="banner-home-content right-float text-right" >
        <h3>2. Vérifiez les infos de la réservation</h3>
        <p>...et découvrez qui a déjà payé</p>
      </div>
      <div class="photo-banner">
        <div class="photo-banner-sticky" id="volley">
          <%= image_tag 'volley.png', id: "photo-volley" %>
        </div>
      </div>
    </div>
    <div class="banner-home" id="banner-blue">
      <div class="banner-home-content left-float text-left" >
        <h3>3. Complétez votre panier</h3>
        <p>Et choisissez votre mode de paiement</p>
      </div>
      <div class="photo-banner">
        <div class="photo-banner-sticky" id="danse">
          <%= image_tag 'danse.png', id: "photo-danse" %>
        </div>
      </div>
    </div>
    <div class="banner-home" id="banner-red">
      <div class="banner-home-content text-center" >
        <h3>4. Accédez au détail de la réservation</h3>
        <p>Partagez l'info à vos amis</p>
      </div>
      <div>
        <div class="text-center" id="pilates">
          <%= image_tag 'pilates.png', id: "photo-pilates" %>
        <div id="btn-pilates">
          <a href="#top-home" class="btn btn-info">Haut de page</a>
        </div>
        </div>
      </div>
    </div>


