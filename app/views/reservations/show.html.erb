<% content_for :title, "Airpay - Votre réservation" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <div id="reservation-infos">
        <div class="reservation-card">
          <div class="reservation-card-title">
            <h2>Aujourd'hui de 16h45 à 18h45</h2>
          </div>
          <div class="row">
            <div class="col-xs-3">
              <div class="reservation-card-picture"><%= image_tag "ballon-foot.png" %></div>
            </div>
            <div class="col-xs-9">
              <div class="reservation-card-content">
                <h3>Réservation confirmée !</h3>
                <h3>Terrain : 1</h3>
                <p>Réservé le : 03/04/05</p>
                <p>Par : Didier Tavu</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div id="reservation-users">
        <div class="panel panel-primary">
          <div class="panel-body text-center" id="reservation-users-container">
            <p>Paiements reçus pour X/X joueurs :</p>
            <div>
              <ul>
                <li><img src="http://placehold.it/50/55C1E7/fff&text=U1" alt="User Avatar" class="img-circle" /> User 1</li>
                <li><img src="http://placehold.it/50/C155E7/fff&text=U2" alt="User Avatar" class="img-circle" /> User 2</li>
                <li><img src="http://placehold.it/50/55E7C1/fff&text=U3" alt="User Avatar" class="img-circle" /> User 3</li>
                <li><img src="http://placehold.it/50/E7C155/fff&text=U4" alt="User Avatar" class="img-circle" /> User 4</li>
              </ul>
            </div>
          </div>
          <div class="panel-footer text-center">
            <p>Partagez aux autres conviés :</p>
            <div class="share-links">
              <a href="#" class="share-link bg-facebook">
                <i class="fa fa-facebook"></i>
              </a>
              <a href="#" class="share-link bg-twitter">
                <i class="fa fa-twitter"></i>
              </a>
              <a href="#" class="share-link bg-email">
                <i class="fa fa-envelope-o"></i>
              </a>
              <a href="#" class="share-link bg-text">
                <i class="fa fa-mobile"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div id="reservation-chat">
        <%= render 'chat' %>
      </div>
    </div>
  </div>
</div>
